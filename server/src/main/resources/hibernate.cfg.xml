<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Параметры подключения к базе данных -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/library</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">0000</property>

        <!-- Параметры настройки диалекта базы данных -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Включение режима "ленивой" загрузки (выключено) -->
        <property name="hibernate.enable_lazy_load_no_trans">false</property>

        <!-- Определение объектов и сопоставлений -->
        <mapping class="com.library.server.entities.Book"/>
        <mapping class="com.library.server.entities.Order"/>
        <mapping class="com.library.server.entities.Role"/>
        <mapping class="com.library.server.entities.Status"/>
        <mapping class="com.library.server.entities.User"/>
    </session-factory>
</hibernate-configuration>